<div class="row">
  <div class="col-lg-4 col-md-3">
  </div>
  <div class="col-lg-4 col-md-6">
    <h1>Create a New Account</h1>

    <%= simple_form_for @user do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, label: "Confirmation" %>
      <%= f.button :submit, "Create my account" %>
    <% end %>
  </div>
  <div class="col-lg-4 col-md-3">
  </div>
</div>
