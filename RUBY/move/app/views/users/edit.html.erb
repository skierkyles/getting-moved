<% provide(:css_class, "edit-user") %>

<div class="row">
  <div class="col-lg-4 col-md-3">
  </div>
  <div class="col-lg-4 col-md-6">
    <h1>Update Your Account</h1>

    <%= image_tag @user.avatar.url(:thumb), :class=>"img-circle avatar-image" %>

    <%= simple_form_for @user, :html => { :multipart => true } do |f| %>
      <%= f.input :avatar %>
      <%= f.input :name %>
      <%= f.input :email, readonly: true %>
      <%= f.input :password, label: "New Password" %>
      <%= f.input :password_confirmation, label: "New Password Confirmation" %>
      <%= f.button :submit, "Update my account" %>
    <% end %>
  </div>
  <div class="col-lg-4 col-md-3">
  </div>
</div>
