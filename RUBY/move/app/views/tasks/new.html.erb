
<% if current_user %>
<div class="row">
  <div class="col-lg-4 col-md-3">
  </div>
  <div class="col-lg-4 col-md-6">
    <h1><i class="fa fa-check"></i> New Activity</h1>
    <%= simple_form_for @task do |f| %>
      <%= f.input :title %>

      <%= f.button :submit, "Create" %>
    <% end %>
  </div>
  <div class="col-lg-4 col-md-3">
  </div>
</div>


<% else %>

<h3>You need to sign in!</h3>
<p><%= link_to :Signin , :signin %></p>

<% end %>
